<div class="score pure-g-r">
    <section class="pure-u-1-1 subject">
        <div class="pure-menu pure-menu-open pure-menu-horizontal subject-menu">
            <ul>
                <li class="subject-item" ng-repeat="subject in subjectList"
                    ng-class="{'pure-menu-selected': currentSubject === subject}" ng-click="selectSubject(subject,$index)">
                    <a>{{ subject.name }}</a>
                </li>
            </ul>
        </div>
    </section>
    <article class="pure-u-1-1 scores">
        <ul>
            <li class="score-item" ng-repeat="score in scoreList">
                <div class="score-detail">
                    <div class="score-left">
                        <div class="lefttext">
                            <div class="scoretotal" ng-bind="score.total"></div>
                            <div style="display:inline;margin:0;padding:0;">分</div>
                            <div class="scoretext">我的得分</div>
                        </div>

                    </div>
                    <div class="score-right">
                        <div class="righttext">
                            <div class="title" ng-bind="score.title"></div>
                            <div class="scoredetail">
                                击败了全班
                                <span style="font-weight:bold;color:orange;" ng-bind="score.Irank + '%'"></span>的同学，与上一次考试相比
                                <span style="font-weight:bold;color:orange;" ng-bind="score.Idir"></span>！
                            </div>
                            <div class="scoreinfos">本班最高得分：<span ng-bind="score.maxscores"></span>分 &nbsp; &nbsp;平均分：<span ng-bind="score.average">82</span>分</div>
                        </div>
                    </div>
                </div>
                <div class="howget" ng-click="showPaper(score)">
                    点击查看如何针对性提升成绩&nbsp;&nbsp;<span class="fa fa-arrow-circle-o-right fa-lg"></span>
                </div>
