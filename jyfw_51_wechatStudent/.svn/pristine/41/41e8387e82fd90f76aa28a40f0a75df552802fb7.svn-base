.myserver {
    background-color: #F7F7F7;
    width: 100%;
    letter-spacing: normal;
    @include font-size(14);

    .top {
        background-color: #41B39C;
        width: 100%;
        height: 180px;

        .headpic {
            width: 80px;
            height: 80px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 50%;
        }

        .name {
            padding: 5% 0;
            text-align: center;
            vertical-align: middle;
            width: 100%;
            margin: 0 auto;
            @include font-size(18);
            color: #fff;
        }

        .schoolclass {
            text-align: center;
            vertical-align: middle;
            width: 100%;
            margin: 0 auto;
            @include font-size(13);
            color: #fff;
        }
    }

    .toptext {
        box-shadow: 1px 1px 2px #888888;
        background-color: #fff;
        padding: 5% 5%;
    }

    .contents {
        width: 100%;
        height: 100%;
        padding: 3%;

        .upinfo {
            border-left: 2px solid #6CC3B1;
            padding: 0 0 0 2%;
            margin:2% 0 2% 2%;

            .scoreinfo {
                background-color:#fff;
                padding: 2% 2% 2% 3%;
                box-shadow:3px 3px 5px #E5E5E5;
                border-radius:5px;
            }
        }

    }

    .green {
        color: #59BBA7;
    }

    .red {
        color: red;
    }
}
