            title: '2015~2016学年度第一学期期末测验',
            showBack: true,
            fromHash: '/browse-condition?id=' + $location.search().id
        });

    }
    


    angular.module('detailscore', ['ngCookies'])
        .config(config)
        .controller('detailscoreView', detailscoreView)
        
})();