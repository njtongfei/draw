.browse-question {
    width: 100%;
    margin: auto;

    p {
        margin: 0;
        padding: 0;
    }

    .button-dropdown {
        .button-dropdown-list {
            li a {
                @include font-size(24);
            }
        }

        .button.button-primary {
            background: $light-blue;
            height: 50px;
            @include font-size(24);
            border-radius: 5px;
            text-align: left;
            padding: 0 0.5em;

            span {
                display: inline-block;
                width: 80%;
                height: 50px;
                line-height: 50px;
                overflow: hidden;
            }

            i {
                position: absolute;
                right: 10%;
                top: 50%;
                -webkit-transform: translateY(-50%);
                -ms-transform: translateY(-50%);
                transform: translateY(-50%);
            }
        }
    }

    .question-container {
        margin-top: 0.5em;
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;

        header {
            width: 100%;
            height: 5px;
            background: $dark-blue;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        article {
            background: $white;
            width: 100%;
            min-height: 10em;

            .area {
                width: 100%;
            }
        }
    }

    .btn-group {
        margin: 1em auto;
        width: 100%;

        .btn {
            width: 49%;
            height: 60px;
            line-height: 60px;
            @extend %text-center;
            margin-left: 2%;
            float: left;
            border: 1px solid $white;
            border-radius: 5px;
            @include font-size(16);
            color: $white;

            &:first-child {
                margin-left: 0;
            }

            &.btn-question {
                background: $orange;
            }

            &.btn-answer {
                background: $lighter-blue;
            }

            &.btn-analysis {
                &.left-0 {
                    margin-left: 0;
                }

                background: #bf6df3;
            }
        }
    }

    .handler-type-group {
        margin-top: 20px;
        width: 100%;
        height: 70px;
        max-height: $button-height;
        @extend %clearfix;

        .handler-type {
            width: 32%;
            height: 100%;
            line-height: 100%;
            display: table;
            margin-left: 2%;
            float: left;
            @extend %text-center;
            @include font-size(20);
            border-radius: 5px;

            &:first-child {
                margin-left: 0;
            }

            .handle-container {
                display: table-cell;
                vertical-align: middle;
                text-align: center;
            }

            i {
                @include font-size(24);
                color: #dedede;
            }

            span {
                margin-left: 0.1em;
            }

            &.active {
                color: $lighter-blue;

                i {
                    color: $lighter-blue;
                }
            }
        }
    }

    .pagination {
        width: 100%;
        background: $white;
        border-radius: 5px;
        margin-top: 1em;
        position: fixed;
        left: 0;
        bottom: 0;

        &:after {
            display: inline-block;
            content: '\20';
            clear: both;
        }

        .page-indicator {
            width: 33.3%;
            float: left;

            &.disable {
                color: $gray;
            }

            &.pre {
                padding-left: 1em;
                text-align: center;
                background-image: url(/assets/images/left.png);
                background-repeat: no-repeat;
                color: #fff;
                @include font-size(14);
                background-color: #41B39C;
                width: 33%;
                height: 30px;
                line-height: 30px;
                display: inline-block;
                cursor: pointer;
            }

            &.no {
                text-align: center;
            }

            &.next {
                padding-right: 1em;
                text-align: center;
                background-image: url(/assets/images/right.png);
                background-repeat: no-repeat;
                background-position: right;
                color: #fff;
                @include font-size(14);
                background-color: #41B39C;
                cursor: pointer;
                height: 30px;
                line-height: 30px;
                width: 33%;
                display: inline-block;
                float: right;
            }

            .currentPage {
                color: #41b39c;
            }
        }
    }
}
