.score {
    background-color: #F5F5F5;
    font-family: 'Microsoft YaHei';
    width: 100%;

    .subject {
        width: 100%;
        .subject-menu {
            width: 100%;
            ul {
                width: 100%;

                li.subject-item {
                    margin: 2% 0 2% 2%;
                    border-radius: 5px;
                    width: 17.8%;
                    text-align: center;
                    border: 1px solid #41B39C;
                    a {
                        width: 100%;
                        height: 35px;
                        line-height: 25px;
                        @include font-size(15);
                    }
                }
            }
        }
    }

    .scores {
        width: 100%;

        ul {
            width: 100%;
            padding: 0 1em;

            li.score-item {
                width: 100%;
                margin-top: 2em;

                div.title {
                    margin: 5% 0 0 0;
                    width: 100%;
                    @include font-size(15);
                    font-weight: bold;
                }

                div.score-detail {
                    background-color: white;
                    margin-bottom: 2%;
                    border-radius: 5px;
                    box-shadow: 0 2px 1px;
                    width: 100%;
                    @extend %clearfix;

                    p {
                        width: auto;
                        display: inline-block;
                        float: left;
                        margin-right: 10%;

                        &:first-child {
                            margin-left: 0;
                        }

                        span {
                            color: $orange;

                            &.up {
                                color: $green;
                            }

                            &.down {
                                color: $red;
                            }

                            &.stay {
                                color: $orange;
                            }

                            &.diff {
                                color: $black;
                            }
                        }
                    }
                }
            }
        }
    }
}


.pure-menu li a {
    padding: 9% 0 25% 0;
}

.pure-menu .pure-menu-selected a {
    color: white;
    background-color: #41B39C;
    border-radius: 5px;
    border: 0 !important;
}

.pure-menu li a:hover, .pure-menu li a:focus {
    color: white;
    background-color: #41B39C;
    border: 0;
}


.view-pageinfo {
    color: white;
    background-color: #41B39C;
    width: 90%;
    margin: 0 auto;
    padding: 0 auto;
    text-align: center;
    border-radius: 5px;
    line-height: -5px;
    padding-bottom: 2%;
}
.scoreright{
    font-size:12px;
    padding-right: 0!important;
}
.scoreleft{
    font-size:12px;
    padding: 0!important;
    margin:3% 0 0 0!important;
}

.scoreleft span {
    font-weight: bold;
    color: #E10907;
    font-size: 18px;
}

.jibai {
    font-weight: bold;
    color: orange;
}
.jibailv{
    margin-bottom:1%;
}
.scoress{
    margin-bottom:3%;
}