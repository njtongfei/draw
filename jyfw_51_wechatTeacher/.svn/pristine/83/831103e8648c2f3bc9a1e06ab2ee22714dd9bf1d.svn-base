.browse-condition {
    padding: 6% 0;
    margin: 0 auto;
    width: 80%;
    height: 100%;
    .button-dropdown {
        margin-top: 6%;
        height: 16%;
        max-height: $button-height;
        display: table;
        .button-dropdown-list {
            li a {
                @include font-size(24);
            }
        }
        .button.button-primary {
            background: $light-blue;
            height: 100%;
            line-height: 100%;
            display: table-cell;
            vertical-align: middle;
            @include font-size(24);
            span {
                display: inline-block;
                width: 80%;
                overflow: hidden;
            }
            i {
                position: absolute;
                right: 10%;
                top: 50%;
                -webkit-transform: translateY(-50%);
                -ms-transform: translateY(-50%);
                transform: translateY(-50%);
            }
        }
    }
    .handler-type-group{
        margin-top: 6%;
        width: 100%;
        height: 16%;
        max-height: $button-height;
        @extend %clearfix;
        .handler-type{
            width: 32%;
            height: 100%;
            line-height: 100%;
            display: table;
            border: 1px solid #dedede;
            margin-left: 2%;
            float: left;
            @extend %text-center;
            @include font-size(20);
            border-radius: 5px;
            &:first-child{
                margin-left: 0;
            }
            .handle-container{
                display: table-cell;
                vertical-align: middle;
                text-align: center;
            }
            i{
                @include font-size(24);
                color: #dedede;
            }
            span{
                margin-left: 0.1em;
            }
            &.active{
                color: $lighter-blue;
                border: 1px solid $lighter-blue;
                i{
                    color: $lighter-blue;
                }
            }
        }
    }
    .query-btn {
        height: 16%;
        max-height: $button-height;
        margin-top: 6%;
        position: relative;
        display: table;
        @extend %text-center;
        .button-wide{
            width: 100%;
            height: 100%;
            line-height: 100%;
            display: table-cell;
            vertical-align: middle;
        }
    }
}